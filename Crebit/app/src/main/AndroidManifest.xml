<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bitblue.crebit" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/crebit"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name="com.bitblue.crebit.SplashScreenActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bitblue.crebit.LoginActivity"
            android:icon="@drawable/crebit"
            android:label="@string/crebitWallet" >
        </activity>
        <activity
            android:name="com.bitblue.crebit.ForgotPass"
            android:label="@string/forgotPasswd" >
        </activity>
        <activity
            android:name="com.bitblue.crebit.SignUp"
            android:label="@string/signupRegister"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="com.bitblue.crebit.services.Services"
            android:label="@string/services" >
        </activity>
        <activity
            android:name="com.bitblue.crebit.services.service"
            android:label="" >
        </activity>
    </application>

</manifest>
