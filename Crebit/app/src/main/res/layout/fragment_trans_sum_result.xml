<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.bitblue.crebit.servicespage.fragments.balanceSummary.BalSumResultFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_transum_totalprofitamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_layout"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvtotalprofit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Total Profit Rs:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvprofit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvtotalamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Total Amount Rs:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/balsumheader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_transum_totalprofitamount"
            android:layout_marginTop="10dp">

            <ListView
                android:id="@+id/lv_transum_result"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/balsumheader"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/black"></ListView>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
