<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.bitblue.crebit.servicespage.fragments.balanceSummary.BalSumResultFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_balsum_balgiven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_layout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvtotalgiven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Total Balance Given"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvbalgiven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Rs:"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/balsumheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_balsum_balgiven"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:id="@+id/tv_balsum_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_balsum_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amount"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_balsum_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contact"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_balsum_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_balsum_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Type"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_balsum_transId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TransId"
                android:textSize="15dp" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_balsum_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/balsumheader"
            android:layout_marginTop="5dp"
            android:background="@color/white"></ListView>
    </RelativeLayout>
</FrameLayout>
